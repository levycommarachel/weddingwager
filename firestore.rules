
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can read any user's public data (for leaderboard)
    // but can only create or update their own user document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Any authenticated user can read bets.
    // Only an admin can create, update or delete bets.
    match /bets/{betId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // A user can create/read/update their own wagers.
    // Other authenticated users can read wagers (e.g. for displaying winners).
    match /wagers/{wagerId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null
                      && request.auth.uid == request.resource.data.userId
                      && wagerId == request.auth.uid + '_' + request.resource.data.betId;
        allow update: if request.auth != null
                      && request.auth.uid == resource.data.userId;
    }
    
    // Parlays are in a subcollection under the user.
    // A user can only access their own parlays.
    match /users/{userId}/parlays/{parlayId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
